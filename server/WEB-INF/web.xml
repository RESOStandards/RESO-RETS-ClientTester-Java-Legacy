<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
          PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
          "http://java.sun.com/j2ee/dtds/web-app_2_3.dtd">

<web-app>
	<!--Action Servlets Config -->
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.realtor.rets.compliance.client.http.ClientComplianceServlet</servlet-class>
		<init-param>
			<param-name>application</param-name>
			<param-value>Application</param-value>
		</init-param>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/conf/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>2</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>

	</servlet>
	
	<!-- Servlat Mapping -->
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
    <welcome-file-list>
        <welcome-file>/setupForward.jsp</welcome-file>
    </welcome-file-list>

	
	<!-- Tag Lib Config -->
	<taglib>
		<taglib-uri>struts-bean.tld</taglib-uri>
		<taglib-location>/WEB-INF/struts-bean.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>struts-html.tld</taglib-uri>
		<taglib-location>/WEB-INF/struts-html.tld</taglib-location>
	</taglib>
	<taglib>
		<taglib-uri>struts-logic.tld</taglib-uri>
		<taglib-location>/WEB-INF/struts-logic.tld</taglib-location>
	</taglib>
	
	<resource-ref>
	<description>db connection</description>
	  <res-ref-name>jdbc/retsClientCompliance</res-ref-name> 
	  <res-type>javax.sql.DataSource</res-type> 
	  <res-auth>Container</res-auth> 
	</resource-ref>
</web-app>
